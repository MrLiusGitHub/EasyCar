<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="103dp"
    android:background="@color/white">
    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/iv_xc_item_logo"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/tv_xc_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textview2"
        android:layout_toRightOf="@+id/iv_xc_item_logo"
        android:layout_toEndOf="@+id/iv_xc_item_logo" />
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/tv_xc_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textview2"
        android:textColor="#900"
        android:layout_below="@id/tv_xc_item_name"
        android:layout_alignLeft="@id/tv_xc_item_name" />

</RelativeLayout>