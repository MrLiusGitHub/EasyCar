<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_img_same"
        android:layout_width="70dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/tv_title_same"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_img_same"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_time_same"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_img_same"
        android:textSize="14sp"
        android:layout_alignBottom="@id/iv_img_same"/>

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5999"
        android:layout_below="@+id/iv_img_same"/>

</RelativeLayout>