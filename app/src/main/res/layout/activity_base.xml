<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_toutiao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="iv_intent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/toutiao_selector"/>

    <ImageView

        android:id="@+id/iv_shequ"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="iv_intent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shequ_selector" />

    <ImageView

        android:id="@+id/iv_xuanche"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="iv_intent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/xuanche_selector" />

    <ImageView

        android:id="@+id/iv_fuwu"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="iv_intent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fuwu_selector" />

    <ImageView
        android:id="@+id/iv_wode"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="iv_intent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wode_selector" />
</LinearLayout>

