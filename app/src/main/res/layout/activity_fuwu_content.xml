<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1999"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fuwu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFE7BA">

            <ImageView
                android:id="@+id/iv_ad_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_ad_2"
                android:layout_width="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_margin="8dp"
            android:text="附近洗车店"/>

        <views.NestedListView
            android:id="@+id/lv_fuwu"
            android:layout_width="match_parent"
            android:dividerHeight="8dp"
            android:divider="#0000"
            android:layout_height="wrap_content"></views.NestedListView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>